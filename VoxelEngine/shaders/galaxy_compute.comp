#version 450

layout(local_size_x = 10, local_size_y = 1, local_size_z = 1) in;

struct Star {
    vec2 position;
    vec3 color;
    vec3 normal;
    vec2 uv;
};

layout(std430, binding = 0) buffer StarBuffer {
    Star stars[];
};

void main() {
    uint gid = gl_GlobalInvocationID.x;
    if (gid < stars.length()) {
        // Here you can modify star properties
        // For example:
        stars[gid].position.x += 0.1; // Slowly move stars to the right
    }
}
